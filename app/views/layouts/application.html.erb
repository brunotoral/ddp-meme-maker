<!DOCTYPE html>
<html>
  <head>
    <title>Don't Die Puppies | Meme Maker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'header' %>
    <% if flash %>
      <% flash.each do |k,v| %>
        <div>
          <%= v %>
        </div>
      <% end %>
    <% end %>
    <%= yield %>
    <%= render 'footer' %>
  </body>
</html>
